        crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/css/app.css">
    <script type="text/javascript" src="/javascript/webutils.js"></script>
    <title>Food management</title>
    <link rel="icon" type="image/x-icon" href="/images/mns-food.ico">

</head>

<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-house"
                    viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                    <path fill-rule="evenodd"
                        d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
                </svg>
                &#9;Food Management System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
            </div>

        </div>
        <div class="" style="width: 15%;">
            <form action="/login" style="display: inline;">
                <button class="btn btn-primary">Login</button>
            </form>
            <form action="/register" style="display: inline;">
                <button class="btn btn-primary">Register</button>
            </form>
        </div>
    </nav>

    <%- include('partials/flash-message.ejs');%>


        <div class="text-center my-5">
            <h2>Welcome to the Food Management System!</h2>
        </div>
        <div class="mt-5 text-center">
            <h4 class="user-account-header">Create an account</h4>
        </div>
        <div class="row mt-1">
            <div class="col-3"></div>
            <div class="col-6 d-flex justify-content-center">
                <form action="/register" method="POST" class="login-form-container">
                    <div class="mb-3">
                        <label class="form-label" for="username">
                            Username
                            <span class="required-asterisk">*</span>
                        </label>
                        <input class="form-control" type="text" id="username" name="username" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="password">
                            Password
                            <span class="required-asterisk">*</span>
                        </label>
                        <input class="form-control" type="password" id="password" name="password" required>
                    </div>
                    <h6 class="mb-2">Please choose a theme color</h6>
                    <div class="row mt-2">
                        <div class="col-2">
                            <input type="radio" id="colorBlue" name="colourTheme" value="blue" class="color-radio">
                            <label for="colorBlue">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    style="fill: blue;" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                    <circle cx="8" cy="8" r="8" />
                                </svg>
                            </label>
                        </div>
                        <div class="col-2">
                            <input type="radio" id="colorRed" name="colourTheme" value="#d50303" class="color-radio">
                            <label for="colorRed">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    style="fill: red;" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                    <circle cx="8" cy="8" r="8" />
                                </svg>
                            </label>
                        </div>
                        <div class="col-2">
                            <input type="radio" id="colorPurple" name="colourTheme" value="purple" class="color-radio">
                            <label for="colorPurple">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    style="fill: purple;" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                    <circle cx="8" cy="8" r="8" />
                                </svg>
                            </label>
                        </div>
                        <div class="col-2">
                            <input type="radio" id="colorTeal" name="colourTheme" value="teal" class="color-radio">
                            <label for="colorTeal">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    style="fill: teal;" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                    <circle cx="8" cy="8" r="8" />
                                </svg>
                            </label>
                        </div>
                        <div class="col-2">
                            <input type="radio" id="colorBrown" name="colourTheme" value="brown" class="color-radio">
                            <label for="colorBrown">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    style="fill: brown;" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                    <circle cx="8" cy="8" r="8" />
                                </svg>
                            </label>
                        </div>
                        <div class="col-2">
                            <input type="radio" id="colorGold" name="colourTheme" value="rgb(206, 134, 0)"
                                class="color-radio">
                            <label for="colorGold">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    style="fill: rgb(206, 134, 0);" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                    <circle cx="8" cy="8" r="8" />
                                </svg>
                            </label>
                        </div>
                    </div>
                    <div class="text-end mt-4">
                        <button class="btn btn-primary">Create account</button>
                    </div>
                </form>
            </div>
            <div class="col-3"></div>
        </div>

        <%- include('helper-functions.ejs');%>


            <footer class="py-3 mt-auto">
                <div>
                    <ul class="nav justify-content-center border-bottom pb-3 mb-3 footer-list">
                    </ul>
                    <div class="ml-2">
                        <p class="text-center">Made by yours truly</p>
                        <p class="text-center"> Â© <%const date=new Date(); const result=date.getFullYear();%>
                                <%=result%> Prokakis
                                    Emmanouil</p>
                        <p>Please note that this software comes without any warranty</p>
                    </div>
                </div>
            </footer>

</body>
