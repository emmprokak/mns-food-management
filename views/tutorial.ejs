                                <label for="colorTeal" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        style="fill: teal;" class="bi bi-circle-fill" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="8" />
                                    </svg>
                                </label>
                            </div>
                            <div class="col-2">
                                <label for="colorBrown" data-bs-target="#carouselExampleIndicators"
                                    data-bs-slide-to="4">
