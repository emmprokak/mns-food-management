                            </svg>
                        </button>
                    </div>
                </div>
                <!-- sort section end  -->

            </div>
            <!-- plus button end -->

            <%if(!allProducts || !allProducts.length){%>
                <div class="mt-5 mx-auto">
                    <h5>Seems like no Products have been registered. Click the "+ button" to the right to get
                        started...</h5>

                </div>
                <%}%>


                    <!-- main items list start -->
                    <div class="row mt-1 justify-content-start">
                        <%for(let product of allProducts){%>

                            <div class="col-md-4 col-xl-3 col-12 my-2 ">
                                <div class="card flex-column h-100 ">
                                    <div class="card-body card-flex d-flex flex-column justify-content-between">
                                        <h5 class="card-title align-self-start">
                                            <span class="product-card-title">
                                                <%=product.name%>
                                            </span>

                                            <%for(let tag of allTags){%>
                                                <%if(tag.product_id===product.id){%>
                                                    <span class="badge rounded-pill bg-primary product-card-category">
                                                        <%for(let tagName of allTagNames){%>
                                                            <%if(tag.tag_id===tagName.id){%>
                                                                <%=tagName.name%>
                                                                    <%}%>
                                                                        <%}%>
                                                    </span>
                                                    <%}%>
                                                        <%}%>


                                        </h5>
                                        <p class="card-text align-self-start">
                                            <span class="product-card-quantity-container ">
                                                <span class="product-card-quantity">
                                                    <%=product.quantity%>
                                                </span>
                                                <%if(product.quantity===1){%>
                                                    package
                                                    <%}else{%>
                                                        packages
                                                        <%}%>
                                            </span>
                                        </p>
                                        <img src="/images/<%=product.image%>" alt="images/squid.jpg"
                                            class="item-img align-self-start">
                                        <div class="d-flex flex-column mt-3">
                                            <div class="d-flex justify-content-between">
                                                <button type="button" class="btn btn-outline-danger align-self-start"
                                                    data-bs-toggle="modal" data-bs-target="#delete-modal"
                                                    onclick="getItemId(this)" id="<%=product.id%>">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                        fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                        <path
                                                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z">
                                                        </path>
                                                        <path fill-rule="evenodd"
                                                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z">
                                                        </path>
                                                    </svg>
                                                </button>
                                                <a href="/edit-product/<%=product.id%>"
                                                    class="btn btn-primary align-self-end edit-button">Edit
                                                    Details</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%}%>
                    </div>
        </div>

        <!-- main items list end -->

        <%- include('partials/create-new-modal.ejs');%>
            <%- include('partials/delete-modal.ejs');%>
                <%- include('partials/upload-file-modal.ejs');%>
                    <%- include('partials/quick-actions.ejs');%>
                        <%- include('partials/footer.ejs');%>

    </div>